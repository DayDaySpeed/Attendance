<Window x:Class="Attendance.ImportResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Attendance"
        mc:Ignorable="d"
         Title="导入完成" Height="270" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FAFAFA">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="📊 导入结果" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock x:Name="SuccessText" FontSize="16" Foreground="Green" Margin="0,5"/>
            <TextBlock x:Name="SkippedText" FontSize="16" Foreground="DarkOrange" Margin="0,5"/>
            <TextBlock x:Name="EndTimeText" FontSize="16" Margin="0,5"/>
            <TextBlock x:Name="DurationText" FontSize="16" Margin="0,5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="📂 打开日志文件夹" Click="OpenFolder_Click" Margin="0,0,10,0"/>
                <Button Content="关闭" Click="Close_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
